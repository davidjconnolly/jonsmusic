#song-form.row
  .col-sm-8.col-sm-offset-2.text-center
    %form
      .input-group
        %input.form-control.input-lg.text-center{"ng-model" => "formData.title", :placeholder => "Enter song title...", :type => "text"}
        %span.input-group-btn
          %button.btn.btn-primary.btn-lg{"ng-click" => "createSong()", :type => "submit"} Add

#song-list.row
  .col-sm-8.col-sm-offset-2.text-left
    .checkbox{"ng-repeat" => "song in songs"}
      %button.btn.btn-danger.btn-xs{"ng-click" => "deleteSong(song._id)"} x
      %a{:href => "/admin/songs/{{song._id}}"}
        {{song.title}}
    %p.text-center{"ng-show" => "loading"}
      %span.fa.fa-spinner.fa-spin.fa-3x
