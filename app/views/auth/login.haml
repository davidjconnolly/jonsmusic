.container
  .row
    .col-md-4.col-md-offset-4
      %h1.text-center.login-title
        Sign in for Jon's Music Admin

      .account-wall
        %form.form-signin{:name => "form", "ng-submit" => "login(form)", :novalidate => ""}
          %div{"ng-class" => "{'has-error': form.email.$error.mongoose}"}
            %input.form-control{:autofocus => "", "mongoose-error" => "", :name => "email", "ng-model" => "user.email", :placeholder => "Email", :required => "", :type => "text"}
            %p.help-block{"ng-show" => "form.email.$error.mongoose"}
              {{ errors.email }}
          %div{"ng-class" => "{'has-error': form.password.$error.mongoose}"}
            %input.form-control{"mongoose-error" => "", :name => "password", "ng-model" => "user.password", :placeholder => "Password", :required => "", :type => "password"}
            %p.help-block{"ng-show" => "form.password.$error.mongoose"}
              {{ errors.password }}
          .form-group.has-error
            %p.help-block
              {{ error.other }}
          %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign in
          %span.clearfix

      %a.text-center.new-account{:href => "/signup"} Create an account
